<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style parent="android:Widget.Spinner" name="SpinnerAsEditText">
        <item name="android:background">#fff</item>
        <item name="dropDownListViewStyle">@style/SpinnerDropdown</item>
    </style>

    <style name="SpinnerDropdown" parent="android:Widget.ListView.DropDown">
        <item name="android:dividerHeight">2dp</item>
        <item name="divider">@color/colorPrimaryDark</item>
    </style>
</resources>