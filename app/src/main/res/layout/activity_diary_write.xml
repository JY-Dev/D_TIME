<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.main.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/background_light"
        android:gravity="center"
        tools:context=".MainActivity" >

        <!--툴바-->
        <include
            layout="@layout/app_toolbar"/>

        <!--Top bar-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp">

                <Button
                    android:id="@+id/save_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/plus_btn_back"
                    android:layout_alignParentEnd="true"
                    android:textSize="20sp"
                    android:fontFamily="@font/font"
                    android:text="SAVE"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/diary_button_back"
            android:padding="15dp"
            android:layout_margin="20dp"
            android:orientation="vertical">



            <ScrollView

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--Top bar-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/date_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/plus_btn_back"
                            android:layout_marginEnd="25dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/diary_date_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="#000"
                                android:fontFamily="@font/font"
                                android:text="2020.3.2"/>
                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/date_view">


                            <ImageButton
                                android:id="@+id/edit_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/plus_btn_back"
                                android:layout_marginEnd="10dp"
                                android:padding="5dp"
                                android:src="@drawable/outline_add_black_48" />


                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:padding="2dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="@drawable/plus_btn_back">

                            <Spinner
                                android:id="@+id/weather_spinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:popupBackground="@drawable/plus_btn_back"
                                android:dropDownWidth="60dp"
                                android:dropDownVerticalOffset="50dp"
                                style="@style/SpinnerAsEditText"
                                android:spinnerMode="dropdown"/>

                            <View
                                android:layout_width="2dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="#000"/>

                            <Spinner
                                android:id="@+id/emotion_spinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:popupBackground="@drawable/plus_btn_back"
                                style="@style/SpinnerAsEditText"
                                android:dropDownWidth="60dp"
                                android:dropDownVerticalOffset="50dp"
                                android:spinnerMode="dropdown"/>

                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <EditText
                        android:id="@+id/title_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textSize="28sp"
                        android:textColor="#000"
                        android:maxLines="2"
                        android:hint="Input Title"
                        android:background="@null"
                        android:fontFamily="@font/font"/>

                    <LinearLayout
                        android:id="@+id/subtitle_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="150dp"
                        android:layout_marginTop="20dp">
                        <EditText
                            android:id="@+id/subtitle_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:hint="Input SubTitle"
                            android:background="@null"
                            android:fontFamily="@font/font"/>
                    </LinearLayout>


                    <!-- Image Bottom View-->
                    <LinearLayout
                        android:id="@+id/image_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center">

                    </LinearLayout>

                </LinearLayout>


            </ScrollView>




        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/whole_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>